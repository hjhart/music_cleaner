<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" 
                    "http://www.w3.org/TR/html4/loose.dtd">
<html>

<head>

  <script src="jquery.min.js" type="text/javascript" charset="utf-8"></script>
  <link rel="stylesheet" href="jquery-ui-1.8.14.custom.css" type="text/css" media="screen" charset="utf-8">
  <script src="jquery-ui-1.8.14.custom.min.js" type="text/javascript" charset="utf-8"></script>
  
  <script type="text/javascript">
  $(document).ready(function(){
	$("#example").autocomplete({
		source: "list",
		delay: 400
	});
	$("input[name=submit]").button();
	$(".playlist_set").buttonset();
	$("#new").click(function() {
		if($(this).is(":checked")) {
			$("#playlist_name").attr("disabled", false)
			$("#playlist_name").focus()
		} else {
			$("#playlist_name").attr("disabled", true)
		}
	})
  });

  </script>
  
</head>
<body>
<% if @message %>
  <span style="color: green; font-size: 2em; font-style: italic;"><%=@message%></span>
<% end %>
<form action="/add">
  	<input type="input" id="example" name="key" style="font-size: 2em;" />
	
<% if (@playlists) %>
<div class="playlist_set">
	<% @playlists.each_with_index do |playlist, index|
		playlist_id = playlist.gsub(/[^\w]/, "_").downcase
		if(index % 4 == 0)
	%>		
</div><div class="playlist_set">
	 <% end %>
	<input type="checkbox" name="<%= playlist %>" value="1" id="<%= playlist_id %>"/><label for="<%= playlist_id %>"><%= playlist %></label>
	<% end %>
<% end %>
	
	<input type="checkbox" name="new" value="1" id="new"/><label for="new">New</label>
</div>
	<input type="input" disabled="true" id="playlist_name" name="playlist_name" style="font-size: 2em;"/>
  	<input type="submit" name="submit" value="add to playlist"/>
<br/><a href="/show">Show Playlists</a>
</form>
</body>
</html>
